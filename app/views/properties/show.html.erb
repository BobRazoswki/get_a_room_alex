<%= render "properties/slider" %>
<article class="row">

	<section class="toggle-vertical col-xs-6 col-md-offset-0">
	 	<ul class="nav nav-tabs" role="tablist">
		  <li class="active"><a href="#flat-tab" role="tab" data-toggle="tab">Flat</a></li>
		  <li><a href="#landlord-tab" role="tab" data-toggle="tab">Landlord</a></li>

		 		<% if @property.rooms.any?  %>
		  		<% @property.rooms.each do |room| %>
		  			<li><a href="#room-tab" role="tab" data-toggle="tab">Room <%= room.number %></a></li>
					<% end %>
		 		<% end %>

		</ul>
	</section>

	<article class="col-xs-6">
		<section class="tab-content">

	  	<div class="tab-pane active" id="flat-tab">
	  		<div class="flat-partial">
		  		<%= render "properties/flat" %>
		  	</div>
		  	<div class="flat-review-partial">
		  		<%= render "properties/flat_reviews" %>
				</div>
	  	</div>

	  	<div class="tab-pane" id="landlord-tab">
	  		<%= render "properties/landlord" %>
	  		<%= render "properties/landlord_reviews"%>
	  	</div>

	  			<% if @property.rooms.any?  %>
	  				<% @property.rooms.each do |room| %>
	  					<div class="tab-pane" id="room-tab">
	  						<%= render partial: "properties/room", locals: {room: room} %>
	  					</div>
	  				<% end %>
	  			<% end %>

		</section>
	</article>
</article>